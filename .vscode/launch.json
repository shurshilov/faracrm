    "version": "0.2.0",
    "configurations": [
        {
            "name": "FARA CRM backend",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "backend.main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8090",
                "--log-level",
                "info",
                "--log-config",
                "./backend/base/system/logger/logging.yaml",
                "--reload",
                "--reload-exclude",
                "'filestore/*'",
                // "--http",
                // "httptools",
                "--workers",
                "1"
            ],
        },
    ]
}